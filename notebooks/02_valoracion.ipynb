import pandas as pd

from scr import (
    DEFAULT_VALUATION_DATE,
    load_universo,
    load_prices_universo_long,
    load_curva_estr,
    add_market_price,
    model_price_from_curve,
    compute_full_risk_measures,
)

DATA_PATH = "../data"

# 1) Carga de datos
univ = load_universo(f"{DATA_PATH}/universo.csv")
prices_long = load_prices_universo_long(f"{DATA_PATH}/precios_historicos_universo.csv")
curva = load_curva_estr(f"{DATA_PATH}/curvaESTR.csv")

# 2) A침adir precio de mercado a fecha de valoraci칩n
univ = add_market_price(univ, prices_long, valuation_date=DEFAULT_VALUATION_DATE)

# 3) Precio te칩rico con la curva ESTR (punto 2 de la pr치ctica)
univ["ModelPrice"] = univ.apply(
    model_price_from_curve,
    axis=1,
    curva=curva,
    val_date=DEFAULT_VALUATION_DATE,
)

# 4) Medidas completas (puntos 3 y 4)
measures = univ.apply(
    compute_full_risk_measures,
    axis=1,
    curva=curva,
    val_date=DEFAULT_VALUATION_DATE,
)

univ = pd.concat([univ, measures], axis=1)
univ["spread_bps"] = univ["spread"] * 10000

univ[["ISIN", "MarketPrice", "ModelPrice", "YTM",
      "Dur_Mac", "Dur_Mod", "Convexity", "spread_bps"]].head()
